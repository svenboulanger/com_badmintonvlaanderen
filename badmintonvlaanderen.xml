<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

	<!-- Component properties -->
	<name>COM_BADMINTONVLAANDEREN</name>
	<author>Sven Boulanger</author>
	<version>1.0.1</version>
	<description>COM_BADMINTONVLAANDEREN_DESCRIPTION</description>
	
	<!-- Updateserver definition -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" name="Badminton Vlaanderen Update Server">https://raw.githubusercontent.com/svenboulanger/com_badmintonvlaanderen/master/badmintonvlaanderen-updates.xml</server>
	</updateservers>
	
	<!-- Site Main File Copy section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>badmintonvlaanderen.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>helpers</folder>
	</files>
	
	<!-- Handle languages -->
	<languages folder="admin/language">
		<language tag="en-GB">en-GB/en-GB.com_badmintonvlaanderen.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.com_badmintonvlaanderen.ini</language>
	</languages>
	
	<media destination="com_badmintonvlaanderen" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
		<folder>js</folder>
		<folder>css</folder>
		<folder>php</folder>
	</media>

	<!-- Administration -->
	<administration>
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_badmintonvlaanderen.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_badmintonvlaanderen.sys.ini</language>
			<language tag="nl-NL">nl-NL/nl-NL.com_badmintonvlaanderen.ini</language>
			<language tag="nl-NL">nl-NL/nl-NL.com_badmintonvlaanderen.sys.ini</language>
		</languages>
	</administration>
</extension>